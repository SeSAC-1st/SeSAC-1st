<!-- 로그인 후 헤더 -->
<% if(sessionUser) { %>
<header
  class="bg-white  fixed w-full z-20 top-0 start-0 border-b border-gray-200">
  <div
    class="flex flex-wrap justify-between items-center mx-auto py-1 px-4 md:px-10">
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <img
        src="/static/image/logoImage.png"
        class="h-8 md:h-14"
        alt="blomit Logo"
      />
    </a>
    
    <div class="flex items-center space-x-6 rtl:space-x-reverse">
      <!--세션 id랑 userid랑 같으면-->
      <span class="text-gray-700 text-xs font-bold ">
        Welcome <%= sessionUser.userNick %>
      </span>
      <!--별명값 넣음.-->
      <a href="/post/search">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-4 md:size-6 text-gray-900"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"
          />
        </svg>
      </a>
      
      
      <button
        id="dropdownAvatarNameButton"
        data-dropdown-toggle="dropdownAvatarName"
        class="flex items-center pe-1 font-medium rounded-full md:me-0 focus:ring-4 focus:ring-mainColor"
        type="button"
      >
        <img
          id="profileImage"
          class="w-10 h-10  rounded-full"
          src="<%= sessionUser.profileImg ? '/uploads/' + sessionUser.profileImg : '/uploads/user.png' %>"
        />
        <svg
          class="w-2.5 h-2.5 ms-3"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 10 6"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="m1 1 4 4 4-4"
          />
        </svg>
      </button>
      <!-- 프로필 눌렀을때 메뉴창 드롭다운 -->
      <div
        id="dropdownAvatarName"
        class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44"
      >
        <ul
          class="py-2 text-sm text-gray-700 "
          aria-labelledby="dropdownInformdropdownAvatarNameButtonationButton"
        >
          <li>
            <a
              href="/post/list/user/1/12"
              id="myPostList"
              class="block px-4 py-2 hover:bg-gray-100"
              >내 게시물 목록</a
            >
          </li>
          <li>
            <a
              href="/post/form"
              class="block px-4 py-2 hover:bg-gray-100"
              >새 게시물 작성</a
            >
          </li>
          <li>
            <a
              href="/user/profile"
              id="mypage-link"
              class="block px-4 py-2 hover:bg-gray-100"
              >마이페이지</a
            >
          </li>
          <li>
            <a
              href="/user/logout"
              class="block px-4 py-2 hover:bg-gray-100"
              >로그아웃</a
            >
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>
<!-- 로그인 전 헤더 -->
<% } else { %>
<header
  class="bg-white fixed w-full z-20 top-0 start-0 border-b border-gray-200 "
>
  <div
    class="flex flex-wrap justify-between items-center mx-auto py-1 px-4 md:px-10"
  >
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <img
        src="/static/image//Blomit-Logo.png"
        class="h-8 md:h-10"
        alt="blomit Logo"
      />
    </a>
    <div class="flex items-center space-x-6 rtl:space-x-reverse">
      <a href="/post/search">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-4 md:size-6 text-gray-900"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"
          />
        </svg>
      </a>
      <button
        type="button"
        class="text-white bg-blue-500 active:bg-blue-900 font-medium rounded-lg text-sm px-4 py-1 text-center"
        onclick="window.location.href='/user/login'"
      >
        로그인
      </button>
    </div>
  </div>
</header>
<% } %>
